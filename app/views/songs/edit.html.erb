<% if @song.errors.full_messages.any? %>
  <ul>
  <% @song.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @song do |s| %>
  <%= s.text_field :title%>
  <%= s.text_field :release_year %>
  <%= s.check_box :released %>
  <%= s.text_field :genre %>
  <%= s.text_field :artist_name%>
  <%= s.submit %>
<% end %>
